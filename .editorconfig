# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# PHP files
[*.php]
indent_size = 4
indent_style = space
max_line_length = 120

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_size = 2
indent_style = space
max_line_length = 100

# JSON files
[*.json]
indent_size = 2
indent_style = space

# YAML files
[*.{yml,yaml}]
indent_size = 2
indent_style = space

# Markdown files
[*.md]
indent_size = 2
indent_style = space
trim_trailing_whitespace = false

# Docker files
[Dockerfile*]
indent_size = 2
indent_style = space

# Shell scripts
[*.{sh,bash,zsh,fish}]
indent_size = 2
indent_style = space

# Python files
[*.py]
indent_size = 4
indent_style = space
max_line_length = 88

# Ruby files
[*.rb]
indent_size = 2
indent_style = space

# Go files
[*.go]
indent_style = tab
indent_size = 4

# Rust files
[*.rs]
indent_size = 4
indent_style = space
max_line_length = 100

# C/C++ files
[*.{c,cpp,h,hpp}]
indent_size = 4
indent_style = space

# Java files
[*.java]
indent_size = 4
indent_style = space

# C# files
